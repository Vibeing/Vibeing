<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/everyone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:padding="16dp"
        android:text="@string/everyone_bottom_sheet"
        android:textColor="@color/black_white"
        android:textSize="@dimen/_13ssp"
        app:drawableStartCompat="@drawable/ic_everyone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:padding="16dp"
        android:text="@string/friends_bottom_sheet"
        android:textColor="@color/black_white"
        android:textSize="@dimen/_13ssp"
        app:drawableStartCompat="@drawable/ic_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/everyone" />

</androidx.constraintlayout.widget.ConstraintLayout>